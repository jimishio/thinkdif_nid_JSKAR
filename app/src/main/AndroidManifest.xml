<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.jimish.hackathon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductInfoActivity"
            android:label="@string/title_activity_product_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BuyActivity"
            android:label="@string/title_activity_buy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SuccessActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_success"
            android:parentActivityName=".BuyActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.jimish.hackathon.BuyActivity" />
        </activity>
        <activity
            android:name=".WalletActivity"
            android:label="@string/title_activity_wallet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HistoryApi"
            android:label="@string/title_activity_history_api"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
